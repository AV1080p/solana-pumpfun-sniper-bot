# ============================================
# TOURIST APP - BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL database connection string (REQUIRED)
# Format: postgresql://username:password@host:port/database_name
# Example: postgresql://postgres:password@localhost:5432/tourist_db
# For local development with Docker:
#   postgresql://postgres:postgres@localhost:5432/tourist_db
DATABASE_URL=postgresql://user:password@localhost:5432/tourist_db

# Database Connection Pool Settings
# Pool size: number of connections to maintain
DB_POOL_SIZE=10
# Max overflow: additional connections beyond pool_size
DB_MAX_OVERFLOW=20
# Pool timeout: seconds to wait for connection from pool
DB_POOL_TIMEOUT=30
# Pool recycle: seconds before recycling a connection
DB_POOL_RECYCLE=3600

# Enable SQL query logging (true/false)
# Useful for debugging but should be false in production
DB_ECHO=false

# ============================================
# AUTHENTICATION CONFIGURATION
# ============================================
# JWT Secret Key (CHANGE THIS IN PRODUCTION!)
# Generate a secure random string: openssl rand -hex 32
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# Application URLs
BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# ============================================
# OAUTH2 PROVIDER CONFIGURATION
# ============================================

# Google OAuth2 (Gmail Sign-In)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GitHub OAuth2
# Get credentials from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Facebook OAuth2 (Optional)
# Get credentials from: https://developers.facebook.com/apps
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret

# Apple OAuth2 (Optional)
# Get credentials from: https://developer.apple.com/account/resources/identifiers/list
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret

# ============================================
# STRIPE PAYMENT CONFIGURATION (Debit/Credit Cards)
# ============================================
# Get your keys from: https://dashboard.stripe.com/apikeys
# Use test keys (sk_test_*, pk_test_*) for development
# Use live keys (sk_live_*, pk_live_*) for production
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# Webhook secret for verifying Stripe webhook events
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# SOLANA CRYPTO PAYMENT CONFIGURATION
# ============================================
# Solana RPC endpoint
# Devnet: https://api.devnet.solana.com
# Mainnet: https://api.mainnet-beta.solana.com
# Or use a custom RPC provider like QuickNode, Alchemy, etc.
SOLANA_RPC_URL=https://api.devnet.solana.com

# Solana wallet address for receiving payments
# Generate a wallet and use its public key
PAYMENT_WALLET_ADDRESS=your_solana_wallet_address

# Jupiter API for Solana token swaps (optional)
JUPITER_API_URL=https://quote-api.jup.ag/v6

# ============================================
# BITCOIN CRYPTO PAYMENT CONFIGURATION
# ============================================
# Bitcoin wallet address for receiving payments
PAYMENT_WALLET_BTC=your_bitcoin_wallet_address

# Bitcoin API endpoint for transaction verification
# Mainnet: https://blockstream.info/api
# Testnet: https://blockstream.info/testnet/api
BITCOIN_API_URL=https://blockstream.info/api

# ============================================
# ETHEREUM CRYPTO PAYMENT CONFIGURATION
# ============================================
# Ethereum wallet address for receiving payments
PAYMENT_WALLET_ETH=your_ethereum_wallet_address

# Ethereum RPC endpoint
# Sepolia Testnet: https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# Mainnet: https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# Or use Infura, QuickNode, etc.
ETHEREUM_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/demo

# ============================================
# AWS CONFIGURATION (Optional)
# ============================================
# AWS credentials for S3, SES, etc. (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# ============================================
# SECURITY NOTES
# ============================================
# - Never commit .env files to version control
# - Use different keys for development and production
# - Rotate keys regularly
# - Use environment-specific values (dev/staging/prod)
# - Keep secret keys secure and never expose them in frontend code

